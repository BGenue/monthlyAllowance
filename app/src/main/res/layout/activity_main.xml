<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_base_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_ad_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_top_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#A3E1BEE7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_bottom_layout"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3">
            <TextView
                android:id="@+id/main_top_month_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="4월"
                android:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/main_top_monthlyMoney_text"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.4"/>
            <TextView
                android:id="@+id/main_top_monthlyMoney_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="용돈 / 월급"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2sp"
                android:autoSizeMaxTextSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/main_top_month_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/main_top_monthlySave_text"/>
            <TextView
                android:id="@+id/main_top_monthlySave_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="저축 / 저금"
                android:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@+id/main_top_monthlyMoney_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/main_top_monthlyUse_text"/>
            <TextView
                android:id="@+id/main_top_monthlyUse_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="실사용 용돈"
                android:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@+id/main_top_monthlySave_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_bottom_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B2DFDB"
            app:layout_constraintTop_toBottomOf="@+id/main_top_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_menu_bar">
            <TextView
                android:id="@+id/main_bottom_left_arrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="왼쪽 화살표"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/main_bottom_middle_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_bottom_middle_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/main_bottom_left_arrow"
                app:layout_constraintRight_toLeftOf="@+id/main_bottom_right_arrow"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/main_bottom_month_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="월별"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/main_bottom_total_spend_text"/>
                <TextView
                    android:id="@+id/main_bottom_total_spend_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="총 지출"
                    app:layout_constraintTop_toBottomOf="@+id/main_bottom_month_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/main_bottom_total_earn_text"/>
                <TextView
                    android:id="@+id/main_bottom_total_earn_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="총 수입"
                    app:layout_constraintTop_toBottomOf="@+id/main_bottom_total_spend_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/main_bottom_last_text"/>
                <TextView
                    android:id="@+id/main_bottom_last_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="잔금"
                    app:layout_constraintTop_toBottomOf="@+id/main_bottom_total_earn_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/main_bottom_right_arrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="오른족 화살표"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/main_bottom_middle_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_menu_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#72FFECB3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_bottom_layout"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1">
            <Button
                android:id="@+id/main_menu_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력"
                android:onClick="onClickMenuButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/main_ad_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_base_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>
