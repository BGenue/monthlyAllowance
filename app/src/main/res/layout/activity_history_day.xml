<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/history_main_earn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_main_spend">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="수입"
            android:textSize="30sp"
            android:textColor="#3F51B5"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/history_main_spend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/history_main_earn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_main_save">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="지출"
            android:textSize="30sp"
            android:textColor="#E91E63"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/history_main_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/history_main_spend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="저금"
            android:textSize="30sp"
            android:textColor="#4CAF50"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>