<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">
    <TextView
        android:id="@+id/input_title_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="입력"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_radio_group"/>
    <RadioGroup
        android:id="@+id/input_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/input_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_date_text">
        <RadioButton
            android:id="@+id/spend_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/earn_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/saveP_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축 +"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/saveM_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축 -"
            android:layout_weight="1"/>
    </RadioGroup>
    <TextView
        android:id="@+id/input_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2020.4.20 (월)"
        app:layout_constraintTop_toBottomOf="@+id/input_radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>