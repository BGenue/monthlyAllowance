<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">
    <TextView
        android:id="@+id/input_title_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="입력"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_radio_group"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.06"/>
    <RadioGroup
        android:id="@+id/input_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/input_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_date_text">
        <RadioButton
            android:id="@+id/spend_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
        <RadioButton
            android:id="@+id/earn_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
        <RadioButton
            android:id="@+id/saveP_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축 +"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
        <RadioButton
            android:id="@+id/saveM_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축 -"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
    </RadioGroup>
    <TextView
        android:id="@+id/input_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2020.4.20 (월)"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@+id/input_radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_category_text"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.09"/>
    <FrameLayout
        android:id="@+id/input_category_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#31FF0000"
        app:layout_constraintTop_toBottomOf="@+id/input_date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_amount_text"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.09">
        <EditText
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"/>
        <Spinner
            android:id="@+id/test_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <!--
    <TextView
        android:id="@+id/input_category_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="카테고리"
        app:layout_constraintTop_toBottomOf="@+id/input_date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_amount_text"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.09"/>-->
    <TextView
        android:id="@+id/input_amount_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="금액"
        app:layout_constraintTop_toBottomOf="@+id/input_category_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_explain_text"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.09"/>

    <TextView
        android:id="@+id/input_explain_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="내용"
        app:layout_constraintBottom_toTopOf="@+id/input_bottom_bar"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_amount_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/input_explain_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/input_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/input_cancel_btn"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/input_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/input_save_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>