<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    tools:context=".InsertActivity">
    <TextView
        android:id="@+id/insert_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="추가"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/category_list"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"/>
    <RadioGroup
        android:id="@+id/insert_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/insert_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <RadioButton
            android:id="@+id/insert_spend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출"
            android:layout_weight="1"
            android:onClick="onRadioBtnClicked"/>
        <RadioButton
            android:id="@+id/insert_earn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:layout_weight="1"
            android:onClick="onRadioBtnClicked"/>
        <RadioButton
            android:id="@+id/insert_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축"
            android:layout_weight="1"
            android:onClick="onRadioBtnClicked"/>
    </RadioGroup>
    <TextView
        android:id="@+id/insert_name_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="항목"
        app:layout_constraintTop_toBottomOf="@+id/insert_radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/insert_name"
        app:layout_constraintBottom_toTopOf="@+id/insert_date"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"/>
    <EditText
        android:id="@+id/insert_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/insert_name_title"
        app:layout_constraintLeft_toRightOf="@+id/insert_name_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/insert_name_title"/>
    <TextView
        android:id="@+id/insert_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="기간"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insert_name_title"
        app:layout_constraintBottom_toTopOf="@+id/insert_ok_btn"
        app:layout_constraintRight_toRightOf="@+id/insert_name_title"/>
    <EditText
        android:id="@+id/insert_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="0 개월"
        app:layout_constraintTop_toTopOf="@+id/insert_date"
        app:layout_constraintLeft_toRightOf="@+id/insert_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/insert_date"/>
    <Button
        android:id="@+id/insert_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        android:onClick="onBtnClicked"
        app:layout_constraintTop_toBottomOf="@+id/insert_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/insert_cancel_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/insert_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:onClick="onBtnClicked"
        app:layout_constraintTop_toTopOf="@+id/insert_ok_btn"
        app:layout_constraintLeft_toRightOf="@+id/insert_ok_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>