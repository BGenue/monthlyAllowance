<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">
    <TextView
        android:id="@+id/history_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="내역"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_year"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.06"/>
    <TextView
        android:id="@+id/history_year"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2020년"
        app:layout_constraintTop_toBottomOf="@+id/history_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_month"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"/>

    <TextView
        android:id="@+id/history_month"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4월"
        app:layout_constraintBottom_toTopOf="@+id/history_radio_group"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_year"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"/>

    <RadioGroup
        android:id="@+id/history_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/history_month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_day">
        <RadioButton
            android:id="@+id/history_day_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일자별"
            android:layout_weight="1"
            android:onClick="onRadioClicked"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/history_spend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
        <RadioButton
            android:id="@+id/history_earn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
        <RadioButton
            android:id="@+id/history_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저금"
            android:layout_weight="1"
            android:onClick="onRadioClicked"/>
    </RadioGroup>
    <TextView
        android:id="@+id/history_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="25일"
        app:layout_constraintTop_toBottomOf="@+id/history_radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_body"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"/>
    <FrameLayout
        android:id="@+id/history_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/history_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_cancel_btn">
    </FrameLayout>
    <Button
        android:id="@+id/history_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로"
        android:onClick="onBtnClick"
        app:layout_constraintTop_toBottomOf="@+id/history_body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>